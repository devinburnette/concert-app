<% if @artists.empty? %>
  Welcome, <%=current_user.name%>. Sit back while we analyze your Spotify listening history, and find all the upcoming concerts in your area from your favorite artists. Confirm or update your email address below.

  <%= form_for(current_user) do |f| %>
    <%= f.text_field :email %>
    <%= f.submit "Send me the shows", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <%= @artists.size %> Artists. <%= @events.size %> Events.
  <table>
    <tr>
      <th>Event</th>
      <th>Time</th>
    </tr>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to(event[:title], event[:ticket_url], target: :blank) %></td>
        <td><%= event[:date] %></td>
      </tr>
    <% end %>
  </table>
<% end %>
